<resources>

    <style name="AppTheme.BillCalc" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bc_primary</item>
        <item name="colorPrimaryDark">@color/bc_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/bc_primary</item>
    </style>

    <style name="AppTheme.BillCalc.LaunchScreen">
        <item name="android:windowBackground">@drawable/bc_launch_screen</item>
    </style>

    <style name="AppTheme.Battery" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/batt_primary</item>
        <item name="colorPrimaryDark">@color/batt_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/batt_primary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Flashlight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/fl_primary</item>
        <item name="colorPrimaryDark">@color/fl_primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/fl_primary</item>
    </style>

    <style name="AppTheme.Flashlight.LaunchScreen">
        <item name="android:windowBackground">@drawable/fl_launch_screen</item>
    </style>
</resources>
