<resources>

    <style name="AppTheme.Battery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/batt_primary</item>
        <item name="colorPrimaryDark">@color/batt_primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/batt_primary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Flashlight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/fl_primary</item>
        <item name="colorPrimaryDark">@color/fl_primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/fl_primary</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppTheme.Flashlight.LaunchScreen">
        <item name="android:windowBackground">@drawable/fl_launch_screen</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
